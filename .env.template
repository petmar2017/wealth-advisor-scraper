# Copy this file to .env and add your actual Claude API key

# Required: Your Claude API key (get from https://console.anthropic.com/)
CLAUDE_API_KEY=your_claude_api_key_here

# Browser settings
HEADLESS_MODE=False
BROWSER_TIMEOUT=30

# Rate limiting (seconds)
MIN_DELAY=2.0
MAX_DELAY=5.0
PAGE_DELAY=10.0

# CAPTCHA & Blocking Handling
CAPTCHA_WAIT_TIME=30
CAPTCHA_MAX_RETRIES=3
RATE_LIMIT_WAIT_TIME=60
ACCESS_DENIED_WAIT_TIME=120

# Output settings
OUTPUT_DIRECTORY=./scraped_data
SAVE_FORMAT=both

# Scraping limits
MAX_PAGES_PER_STATE=50
MAX_ADVISORS_PER_COMPANY=10000

# Advanced CAPTCHA Settings
AUTO_SOLVE_SIMPLE_CAPTCHAS=false
MANUAL_CAPTCHA_SOLVING=true
CAPTCHA_DETECTION_SENSITIVITY=high
