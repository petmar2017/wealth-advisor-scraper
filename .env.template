# Create a .env file with these variables:

# Required: Your Claude API key
CLAUDE_API_KEY=your_actual_claude_api_key_here

# Browser settings
HEADLESS_MODE=False
BROWSER_TIMEOUT=30

# Rate limiting (seconds)
MIN_DELAY=2.0
MAX_DELAY=5.0
PAGE_DELAY=10.0

# Output settings
OUTPUT_DIRECTORY=./scraped_data
SAVE_FORMAT=both

# Scraping limits
MAX_PAGES_PER_STATE=50
MAX_ADVISORS_PER_COMPANY=10000

# Override target states if needed (comma-separated)
# TARGET_STATES=New York,New Jersey,Florida

# Override target companies if needed (comma-separated) 
# TARGET_COMPANIES=UBS,Morgan Stanley
